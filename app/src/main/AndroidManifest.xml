<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permissions for accessing device features -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- Required for Google Maps API -->
    <meta-data
        android:name="com.google.android.geo.API_KEY"
        android:value="AIzaSyAJDslmDAkTVbjpAHDFOS_2spJVyPq1N3I" /> <!-- Replace with your actual API key -->

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.Chirpify"
        tools:targetApi="31">

        <!-- MainActivity set as the launcher activity -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Other Activities -->
        <activity
            android:name=".Homepage"
            android:exported="false"
            android:theme="@style/Theme.Chirpify" />
        <activity
            android:name=".SignIn"
            android:exported="false"
            android:theme="@style/Theme.Chirpify" />
        <activity
            android:name=".SignUp"
            android:exported="false"
            android:theme="@style/Theme.Chirpify" />
        <activity
            android:name=".HotspotsList"
            android:exported="false"
            android:theme="@style/Theme.Chirpify" />
        <activity
            android:name=".AddHotspots"
            android:exported="false"
            android:theme="@style/Theme.Chirpify" />
        <activity
            android:name=".viewBirdsObservation"
            android:exported="false"
            android:theme="@style/Theme.Chirpify" />
        <activity
            android:name=".AddObservations"
            android:exported="false"
            android:theme="@style/Theme.Chirpify" />
        <activity
            android:name=".Settings"
            android:exported="false"
            android:theme="@style/Theme.Chirpify" />
    </application>
</manifest>
